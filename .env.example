# Database
DATABASE_URL=postgresql://username:password@localhost:5432/deribit_flows
POSTGRES_USER=deribit_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=deribit_flows

# Firecrawl (your hosted instance)
FIRECRAWL_API_KEY=your_firecrawl_api_key
FIRECRAWL_BASE_URL=https://your-firecrawl-instance.com

# AI/ML Models (OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Market Data (CoinGecko)
COINGECKO_API_KEY=your_coingecko_api_key
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
WEBHOOK_SECRET=your_webhook_secret_key

# Scraping Settings
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
REQUEST_DELAY=1.0
MAX_RETRIES=3

# Streamlit
STREAMLIT_PORT=8501