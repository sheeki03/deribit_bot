# =======================================================
# REQUIRED: Core APIs for the system to work
# =======================================================

# Firecrawl (your hosted instance) - REQUIRED
FIRECRAWL_API_KEY=your_firecrawl_api_key
FIRECRAWL_BASE_URL=https://your-firecrawl-instance.com

# AI/ML Models (OpenRouter) - REQUIRED
OPENROUTER_API_KEY=your_openrouter_api_key

# Market Data (CoinGecko) - REQUIRED for price correlation
COINGECKO_API_KEY=your_coingecko_api_key
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# =======================================================
# OPTIONAL: Enhanced features (system works without these)
# =======================================================

# Telegram Notifications (leave empty to disable)
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_chat_id

# Database (system uses file storage by default)
# DATABASE_URL=postgresql://username:password@localhost:5432/deribit_flows

# Redis (system uses in-memory caching by default)
# REDIS_URL=redis://localhost:6379/0

# Webhook (only needed for external integrations)
# WEBHOOK_SECRET=your_webhook_secret_key

# =======================================================
# APPLICATION SETTINGS
# =======================================================

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# Scraping Settings
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
REQUEST_DELAY=1.0
MAX_RETRIES=3

# Streamlit Dashboard
STREAMLIT_PORT=8501

# Processing Limits
MAX_IMAGES_PER_ARTICLE=20
IMAGE_TIMEOUT_SECONDS=30
OCR_MAX_RETRIES=2

# Scoring Thresholds
MIN_CONFIDENCE_THRESHOLD=0.7
ALERT_THRESHOLD=0.3
EXTREME_THRESHOLD=0.5